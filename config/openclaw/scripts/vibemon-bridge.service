[Unit]
Description=VibeMon Bridge - OpenClaw status to ESP32
After=default.target

[Service]
Type=simple
WorkingDirectory=%h/.openclaw/workspace
ExecStart=/usr/bin/env node %h/.openclaw/workspace/scripts/vibemon-bridge.mjs
Restart=always
RestartSec=2
Environment=PROJECT_NAME=OpenClaw
Environment=OPENCLAW_LOG_DIR=/tmp/openclaw

[Install]
WantedBy=default.target
